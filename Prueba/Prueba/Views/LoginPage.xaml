<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Prueba.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry Placeholder="Correro" WidthRequest="300" HeightRequest="50" FontSize="15" HorizontalOptions="Center" VerticalOptions="Center"
                   Text="{Binding EmailTxt,Mode=TwoWay}"/>
            <Button Text="Login" HeightRequest="35" FontSize="12" Command="{Binding LoginComand}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>